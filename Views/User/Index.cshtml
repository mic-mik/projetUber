    <!-- owl carousel script -->
    <script type="text/javascript">
        $(".owl-carousel").owlCarousel({
            loop: true,
            margin: 20,
            navText: [],
            autoplay: true,
            autoplayHoverPause: true,
            responsive: {
                0: {
                    items: 1
                },
                768: {
                    items: 2
                },
                1000: {
                    items: 2
                }
            }
        });


        document.getElementById("rolesInscrireDropdown").addEventListener("change", function() {
            var selectedValue = this.value;
            if (selectedValue === "Chauffeur") {
                window.location.href = '@Url.Action("Inscription", "Drivers")';
            } else if (selectedValue === "Passager") {
                window.location.href = '@Url.Action("Inscription", "User")';
            }
        });

        document.getElementById("rolesConnecterDropdown").addEventListener("change", function() {
            var selectedValue = this.value;
            if (selectedValue === "Chauffeur") {
                window.location.href = '@Url.Action("Connexion", "Drivers")';
            } else if (selectedValue === "Passager") {
                window.location.href = '@Url.Action("Connexion", "User")';
            }
        });
    </script>


