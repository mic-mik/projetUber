@model Projet_GoFast.Models.Chauffeur

@{
    ViewBag.Title = "Inscription";
}
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
<link href="~/CSS/bootstrap.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
<link href="~/CSS/responsive.css" rel="stylesheet" />
<link href="~/CSS/Style.css" rel="stylesheet" />

<body>

    <div class="hero_area">
        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a href="#">
                        <img src="~/images/gofast7.png" alt="logo" style="width: 100px; height: auto;">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">

                        </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="d-flex ml-auto flex-column flex-lg-row align-items-center">
                            <ul class="navbar-nav  ">
                                <li class="nav-item active">

                                    <a href="@Url.Action("Index", "User")" style="color:black; font-weight:bold"> ACCEUIL</a>
                                </li>

                                <li class="nav-item">

                                    <a href="@Url.Action("Connexion", "Drivers")" style="color: black; margin-left: 20px; font-weight: bold"> SE CONNECTER</a>

                                </li>

                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <section class=" slider_section ">
            <div class="container-fluid">
                <div class="row">
                    <div class="container">
                        <div class="heading_container">
                            <h2>
                                MODIFICATION DES INFORMATIONS  <br>
                                CHAUFEUR
                            </h2>
                        </div>
                    </div>
                    <div class="col-md-7 ">
                        <div class="box">

                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="/images/slider-img.png" class="d-block w-100" alt="Image 1">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="/images/slider-img.png" class="d-block w-100" alt="Image 2">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="/images/slider-img.png" class="d-block w-100" alt="Image 3">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="/images/slider-img.png" class="d-block w-100" alt="Image 4">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="/images/slider-img.png" class="d-block w-100" alt="Image 5">
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4 col-md-5 ">

                        <div class="slider_form">
                            <h4>
                                MODIFIER  CHAUFFEUR
                            </h4>
                            @using (Html.BeginForm("Inscription", "Drivers", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.ChauffeurId)

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Nom, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer Nom"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Prenom, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer Prenom"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Email, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer Email"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Telephone, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer Telephone"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                                </div>

                                <p style="color:white; font-weight:bold">AJOUTER PHOTO</p>

                                <div class="inline-form-group" style="background-color:white; padding-top: 25px; height:40px; width:340px; border-radius:5px; margin-bottom:15px">
                                    <input type="file" name="ImageFile" />
                                    @Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })

                                    @if (Model.ImagePath != null)
                                    {
                                        <img src="~/Photos/@Model.ImagePath" alt="User Image" style="max-width: 100px; max-height: 100px;" />
                                    }
                                </div>

                                <p style="color:white; font-weight:bold">CHOISIR MARQUE</p>

                                <div style="width:340px; margin-bottom:15px">
                                    @Html.DropDownListFor(model => model.Voiture.Marque.MarqueId, (SelectList)ViewBag.MarqueId, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Voiture.Marque.MarqueId, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Voiture.Modele, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer le Modèle"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Voiture.Modele, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Voiture.Annee, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer l'Année"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Voiture.Annee, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Voiture.Immatriculation, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer l'Immatriculation"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Voiture.Immatriculation, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Voiture.PermisConduite, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer le Permis de Conduire"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Voiture.PermisConduite, "", new { @class = "text-danger" })
                                </div>

                                <p style="color:white; font-weight:bold">CHOISIR PROVINCE</p>

                                <div style="width:340px; margin-bottom:15px">
                                    @Html.DropDownListFor(model => model.Adresse.Province.ProvinceId, (SelectList)ViewBag.ProvinceId, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Adresse.Province.ProvinceId, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Adresse.Rue, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer la Rue"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Adresse.Rue, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Adresse.Ville, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer la Ville"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Adresse.Ville, "", new { @class = "text-danger" })
                                </div>

                                <div class="inline-form-group">
                                    @Html.EditorFor(model => model.Adresse.CodePostal, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Entrer le Code Postal"
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.Adresse.CodePostal, "", new { @class = "text-danger" })
                                </div>

                                <div class="btm_input">
                                    <button style="color:black; font-weight:bold">Envoyer</button>
                                </div>

                                if (ViewBag.Message != null)
                                {
                                    <p style="background-color: #f7c621; margin-top: 10px; font-weight:bold">@ViewBag.Message</p>
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>

        </section>



    </div>

    <!-- footer section -->
    <script src="~/js/bootstrap.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
    </script>


    <!-- owl carousel script -->
    <script type="text/javascript">
        $(".owl-carousel").owlCarousel({
            loop: true,
            margin: 20,
            navText: [],
            autoplay: true,
            autoplayHoverPause: true,
            responsive: {
                0: {
                    items: 1
                },
                768: {
                    items: 2
                },
                1000: {
                    items: 2
                }
            }
        });
    </script>
    <!-- end owl carousel script -->

</body>











